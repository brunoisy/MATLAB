addpath('functions')
addpath('functions_ransac')

filename = 'data/MAT/data_2/curve_1.mat';
%filename = 'data/MAT/data_1/good/curve_2.mat';

load(filename)
x = [dist; force];
free = true(1,length(x));
allinliers = cell(1,10);
Lc = zeros(1,10);
maxLc = 200;


%%% 1 - We fit a first line to the profile, to get rid of approaching phase
thresh = 8;
[~, inliers] = ransac(x(:,free), @linefittingfn, @linedistfn, @degenfn, 3, thresh, 1, 10, 50, true);
allinliers{1} = inliers;
start_ind = inliers(end);
start = x(1,start_ind);

outliers = x(1,:) < start + 7;
start_ind = outliers(end);
start = x(1,start_ind);
free(1:start_ind) = false(1,start_ind);


%we discard all outliers between peak and peak + thresh


%%% 2 - We attempt to fit an FD curve to the different crests
thresh = 5;
for i = 1:10
    if ~any(free)
        ncrest = i-1;
        break
    end
    [~,inliers] = ransac_2(x(:,free), @fittingfn, @distfn_2, @degenfn, 1, thresh, 1, 10, 50);
    inliers = start_ind+inliers;
    allinliers{1+i} = inliers;
    start_ind = inliers(end);
    start = x(1,start_ind);
    
    free(inliers) = false(1,length(inliers));
    free(start < x(1,:) & x(1,:) < start + 7) = false(1,sum(start < x(1,:) & x(1,:) < start + 7));
    
    
    Lc(i) = fittingfn(x(:,inliers));
    if Lc(i) > maxLc
        ncrest = i-1;
        break;
    end
end







%%%% Plot
xlimits = [-10, 200];
ylimits = [-150, 200];

figure
subplot(1,2,1)
hold on
xlim(xlimits);
ylim(ylimits);
xlabel('Distance (nm)');
ylabel('Force (pN)');
title('initial datapoints');
plot(x(1,:), x(2,:),'.')



subplot(1,2,2)
hold on
xlim(xlimits);
ylim(ylimits);
xlabel('Distance (nm)');
ylabel('Force (pN)');
title('Approximated FD curves using RANSAC');

xinliers = x(:,allinliers{1});
plot(xinliers(1,:), xinliers(2,:),'.')
ab = polyfit(xinliers(1,:), xinliers(2,:), 1);
a = ab(1);
b = ab(2);
X = linspace(min(xinliers(1,:)'),max(xinliers(1,:)'));
F = a*X+b;
plot(X,F)


for i = 1:ncrest
    xinliers = x(:,allinliers{1+i});
    plot(xinliers(1,:), xinliers(2,:),'.')
    
    X = linspace(0,Lc(i));
    F = fd(Lc(i), X);
    plot(X,F)
end

